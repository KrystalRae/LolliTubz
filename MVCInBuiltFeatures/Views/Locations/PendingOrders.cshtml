@model List<MVCInBuiltFeatures.Models.PendingOrderModel>

<div class="row mt-3">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                Pending Orders
            </div>

            <div class="card-body table">

                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Location Name</th>
                            <th>Total Number Products in Order</th>
                            <th>Order Date</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td style="vertical-align: inherit;">
                                    <a href="@Url.Action("OrderSummary", "Location", new { id = order.OrderId })"> @order.LocationName</a>
                                </td>
                                <td>
                                    @order.TotalNumberOfProducts
                                </td>
                                <td>
                                    @order.OrderDate.ToString("dd-MMM-yyyy")
                                </td>
                                <td>
                                    @Html.ActionLink("Delete", "DeleteOrder", "Locations", routeValues: new { id = order.OrderId }, htmlAttributes: new { @class = "btn button-blue" })
                                </td>
                                <td>
                                    @Html.ActionLink("Approve", "ApproveOrder", "Locations", routeValues: new { id = order.OrderId }, htmlAttributes: new { @class = "btn button-blue" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>

