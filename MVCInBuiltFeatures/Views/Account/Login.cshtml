@model MVCInBuiltFeatures.Models.LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="text-center w-75 m-auto mb-3">
    <a href="index.html">
        <img src="~/assets/images/Lolli_Tubz_Logo-min.jpg" style="width: 80%" />
    </a>
</div>

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new  { @class= "mt-3 text-danger" })

    <div class="form-group mb-3 mt-3">
        @Html.LabelFor(m => m.UserName)
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Enter your user name", @required = "required" })
        @Html.ValidationMessageFor(m => m.UserName)
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @required = "required", @placeholder = "Enter your password" })
        @Html.ValidationMessageFor(m => m.Password)
    </div>

    <div class="form-group mb-3">
        <div class="custom-control custom-checkbox">
            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "custom-control-input", @checked = "checked" })
            @Html.LabelFor(m => m.RememberMe, new { @class = "custom-control-label" })
        </div>
    </div>

    <div class="form-group mb-3 text-center">
        <button class="btn btn-block button-blue" type="submit"> Log In </button>
    </div>

    <div class="form-group mb-0">
        @Html.ActionLink("Forgot your password?", "Forgot your password?")
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}